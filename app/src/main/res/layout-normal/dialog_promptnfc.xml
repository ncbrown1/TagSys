<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nfcprompt"
        android:text="Place the NFC Tag you would like to write \nto on the back side of your device."
        android:textStyle="bold"
        android:textSize="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/id_field"
        android:text="(This text will change on successful read)"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/nfcprompt"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>