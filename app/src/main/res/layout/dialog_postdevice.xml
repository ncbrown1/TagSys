<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/type_prompt"
        android:text="Type: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/type_input" />
    <EditText
        android:id="@+id/type_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/type_prompt"
        android:layout_alignLeft="@+id/description_input"
        android:hint="What kind of Device?" />

    <TextView
        android:id="@+id/characteristics_prompt"
        android:text="Characteristics: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/characteristics_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/characteristics_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/characteristics_prompt"
        android:layout_below="@id/type_input"
        android:hint="What's it like?" />

    <TextView
        android:id="@+id/freq_prompt"
        android:text="Required\nFrequency: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/freq_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/freq_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/freq_prompt"
        android:layout_below="@id/characteristics_input"
        android:hint="How many hours between checks?"
        android:inputType="number" />

</RelativeLayout>