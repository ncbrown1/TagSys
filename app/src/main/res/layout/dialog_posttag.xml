<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/type_prompt"
        android:text="Type Id #: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/type_input" />
    <Spinner
        android:id="@+id/type_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/type_prompt"
        android:layout_alignLeft="@+id/description_input"
        android:prompt="@string/type_prompt" />

    <TextView
        android:id="@+id/loc_prompt"
        android:text="Location: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/loc_input" />
    <Spinner
        android:id="@+id/loc_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/loc_prompt"
        android:layout_below="@id/type_input"
        android:layout_alignLeft="@+id/description_input"
        android:prompt="@string/loc_prompt" />

    <TextView
        android:id="@+id/description_prompt"
        android:text="Description: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/description_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/description_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/description_prompt"
        android:layout_below="@id/loc_input"
        android:hint="What's it like?" />

    <TextView
        android:id="@+id/tagid_prompt"
        android:text="Tag Id: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tagid_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/tagid_input"
        android:text="Unique Tag Id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tagid_prompt"
        android:layout_below="@id/description_input"
        android:layout_alignLeft="@id/description_input"
        android:layout_marginTop="20dp"/>

</RelativeLayout>